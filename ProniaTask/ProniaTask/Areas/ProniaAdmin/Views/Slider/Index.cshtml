@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="ProniaAdmin" asp-controller="slider" asp-action="create">
            Create New Category
        </a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>                    
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Text
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model)
                {
                <tr>
                    <td>
                        <img  src="~/assets/images/website-images/@slider.Image"/>
                    </td>
                    <td>
                        @slider.Title
                    </td>
                    <td>
                        @slider.Text
                    </td>
                    <td class="display-flex">
                        <div>
                            <a asp-area="ProniaAdmin" asp-controller="slider" asp-action="Update" asp-route-id="@slider.Id"
                               class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                        </div>
                        <div>
                            <a asp-area="ProniaAdmin" asp-controller="slider" asp-action="Delete" asp-route-id="@slider.Id"
                               class="btn btn-primary"><i class="mdi mdi-delete"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
