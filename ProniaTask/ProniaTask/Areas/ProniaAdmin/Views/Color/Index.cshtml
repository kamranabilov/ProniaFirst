@model List<Color>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="ProniaAdmin" asp-controller="color" asp-action="create">
            Create New Color
        </a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (Color color in Model)
                {
                    <tr>
                        <td>
                            @color.Id
                        </td>
                        <td>
                            @color.Name
                        </td>
                        <td class="display-flex">
                            <div>
                                <a asp-area="ProniaAdmin" asp-controller="Color" asp-action="Edit" asp-route-id="@color.Id"
                                   class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a asp-area="ProniaAdmin" asp-controller="Color" asp-action="Delete" asp-route-id="@color.Id"
                                   class="btn btn-primary"><i class="mdi mdi-delete"></i></a>
                            </div>
                        </td>
                    </tr>
                 }

            </tbody>
        </table>
    </div>
</div>

